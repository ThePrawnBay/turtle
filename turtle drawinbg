import turtle
screen = turtle.Screen()
screen.bgcolor("Red") 
donatello = turtle.Turtle() #donatello is mo's favorite TMNT

def square(x, y):
    donatello.pensize(5)
    donatello.pencolor("blue")
    donatello.penup()
    donatello.goto(x, y)
    donatello.pendown()
    for i in range(4): 
        donatello.forward(90) 
        donatello.right(90)
        
def triangle(tx, ty):
    donatello.pensize(5)
    donatello.pencolor("orange")
    donatello.penup()
    donatello.goto(tx, ty)
    donatello.pendown()
    for i in range(3): 
        donatello.forward(90) 
        donatello.right(120)

def hexagon(hx, hy):
    donatello.pensize(5)
    donatello.pencolor("purple")
    donatello.penup()
    donatello.goto(hx, hy)
    donatello.pendown()
    for i in range(6): 
        donatello.forward(80) 
        donatello.right(60)
        
def star(sx, sy):
    donatello.pensize(5)
    donatello.pencolor("green")
    donatello.penup()
    donatello.goto(sx, sy)
    donatello.pendown()
    for i in range(5): 
        donatello.forward(80) 
        donatello.right(144)


def circle(cx, cy, radius):
    donatello.pensize(8)
    donatello.pencolor("turquoise")
    donatello.fillcolor("yellow")
    donatello.penup()
    donatello.goto(cx, cy)
    donatello.pendown()
    donatello.begin_fill()
    donatello.circle(radius)
    donatello.end_fill()
    
#call functions
star(-200, 10)
hexagon(100, 100)
triangle(-100, 220,)
square(30, 40)
square(10, 50)
square (100, 200)
square (180, 280)
square (260, 200)
circle(-200, 200, 80)

turtle.done() 
