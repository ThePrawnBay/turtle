import turtle
screen = turtle.Screen()
screen.bgcolor("black") 
donatello = turtle.Turtle() #donatello is mo's favorite TMNT

def square(x, y):
    donatello.pensize(5)
    donatello.pencolor("ghost white")
    donatello.fillcolor("ghost white")
    donatello.penup()
    donatello.goto(x, y)
    donatello.pendown()
    donatello.begin_fill()
    for i in range(4): 
        donatello.forward(101) 
        donatello.left(-90)
    donatello.end_fill()
    
def square2(ssx, ssy):
    donatello.pensize(5)
    donatello.pencolor("black")
    donatello.fillcolor("black")
    donatello.penup()
    donatello.goto(ssx, ssy)
    donatello.pendown()
    donatello.begin_fill()
    for i in range(4): 
        donatello.forward(30) 
        donatello.left(-90)
    donatello.end_fill()
        
def triangle(tx, ty):
    donatello.pensize(5)
    donatello.pencolor("ghost white")
    donatello.fillcolor("ghost white")
    donatello.penup()
    donatello.goto(tx, ty)
    donatello.pendown()
    donatello.begin_fill()
    for i in range(3): 
        donatello.forward(100) 
        donatello.right(-120)
    donatello.end_fill()

def hexagon(hx, hy):
    donatello.pensize(5)
    donatello.pencolor("misty rose")
    donatello.penup()
    donatello.goto(hx, hy)
    donatello.pendown()
    for i in range(6): 
        donatello.forward(80) 
        donatello.right(60)
        
def star(sx, sy):
    donatello.pensize(5)
    donatello.pencolor("misty rose")
    donatello.fillcolor("misty rose")
    donatello.penup()
    donatello.goto(sx, sy)
    donatello.pendown()
    donatello.begin_fill()
    for i in range(5): 
        donatello.forward(80) 
        donatello.right(144)
    donatello.end_fill()


def circle(cx, cy, radius):
    donatello.pensize(8)
    donatello.pencolor("red")
    donatello.fillcolor("red")
    donatello.penup()
    donatello.goto(cx, cy)
    donatello.pendown()
    donatello.begin_fill()
    donatello.circle(radius)
    donatello.end_fill()

def circle2(cx2, cy2, radius):
    donatello.pensize(8)
    donatello.pencolor("blue")
    donatello.fillcolor("blue")
    donatello.penup()
    donatello.goto(cx2, cy2)
    donatello.pendown()
    donatello.begin_fill()
    donatello.circle(radius)
    donatello.end_fill()

def line(lx, ly):
    donatello.pensize(5)
    donatello.pencolor("gray")
    donatello.fillcolor("gray")
    donatello.penup()
    donatello.goto(lx, ly)
    donatello.pendown()
    donatello.begin_fill()
    for i in range(2): 
        donatello.forward(80) 
        donatello.right(-180)
    donatello.end_fill()
    
#call functions
triangle(-100, -155)
square (-100, -155)
square2(-70, -235)
circle(110, -160, 10)
circle2(120, -160, 10)
line(-150, -160)


turtle.done() 
